# mythOS Dragon Edition Configuration
# Gaming/Entertainment edition (250MB target)
# Inherits from mythos-base.config

BR2_TARGET_GENERIC_HOSTNAME="mythos-dragon"
BR2_TARGET_GENERIC_ISSUE="Welcome to mythOS Dragon Edition"

# Filesystem size - largest
BR2_TARGET_ROOTFS_EXT2_SIZE="300M"

# X11 and GUI
BR2_PACKAGE_XORG7=y
BR2_PACKAGE_XSERVER_XORG_SERVER=y
BR2_PACKAGE_XSERVER_XORG_SERVER_MODULAR=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_VESA=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_FBDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_EVDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_KEYBOARD=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_MOUSE=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_JOYSTICK=y

# OpenGL support
BR2_PACKAGE_MESA3D=y
BR2_PACKAGE_MESA3D_OPENGL_GLX=y
BR2_PACKAGE_MESA3D_DRI_DRIVER_I965=y

# Window manager
BR2_PACKAGE_OPENBOX=y

# GTK3
BR2_PACKAGE_LIBGTK3=y
BR2_PACKAGE_PANGO=y
BR2_PACKAGE_CAIRO=y
BR2_PACKAGE_PYTHON_PYGOBJECT=y

# Gaming - Emulators
BR2_PACKAGE_RETROARCH=y
BR2_PACKAGE_DOSBOX=y
BR2_PACKAGE_SCUMMVM=y
BR2_PACKAGE_MAME=y

# SDL for games
BR2_PACKAGE_SDL2=y
BR2_PACKAGE_SDL2_IMAGE=y
BR2_PACKAGE_SDL2_MIXER=y
BR2_PACKAGE_SDL2_TTF=y

# Classic games
BR2_PACKAGE_GNUCHESS=y
BR2_PACKAGE_FREECIV=y
BR2_PACKAGE_SUPERTUX=y
BR2_PACKAGE_SUPERTUXKART=y

# WINE for Windows games
BR2_PACKAGE_WINE=y

# Steam (if possible on i586, may need alternative)
# Note: Steam typically requires x86_64, may not work on i586

# Audio - Critical for gaming
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_ALSA_UTILS_SPEAKER_TEST=y
BR2_PACKAGE_ALSA_UTILS_AMIXER=y
BR2_PACKAGE_ALSA_UTILS_APLAY=y
BR2_PACKAGE_PULSEAUDIO=y
BR2_PACKAGE_PULSEAUDIO_DAEMON=y

# Video playback
BR2_PACKAGE_FFMPEG=y
BR2_PACKAGE_VLC=y
BR2_PACKAGE_MPVMEDIA=y

# Image viewers
BR2_PACKAGE_FEH=y

# File manager
BR2_PACKAGE_PCMANFM=y

# Terminal
BR2_PACKAGE_XTERM=y

# Web browser
BR2_PACKAGE_FIREFOX=y

# Fonts
BR2_PACKAGE_DEJAVU=y
BR2_PACKAGE_LIBERATION=y
BR2_PACKAGE_FONT_AWESOME=y

# Joystick/controller support
BR2_PACKAGE_JOYUTILS=y

# Networking for multiplayer
BR2_PACKAGE_OPENSSH=y
BR2_PACKAGE_OPENVPN=y
