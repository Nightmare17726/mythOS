# mythOS Chase Edition Configuration
# Minimal terminal-only edition (50MB target)
# Inherits from mythos-base.config

BR2_TARGET_GENERIC_HOSTNAME="mythos-chase"
BR2_TARGET_GENERIC_ISSUE="Welcome to mythOS Chase Edition"

# Filesystem size - minimal
BR2_TARGET_ROOTFS_EXT2_SIZE="75M"

# No X11/GUI for Chase
# BR2_PACKAGE_XORG7 is not set
# BR2_PACKAGE_XSERVER_XORG_SERVER is not set

# Terminal-only packages
BR2_PACKAGE_NCURSES=y
BR2_PACKAGE_NCURSES_WCHAR=y
BR2_PACKAGE_NCURSES_TARGET_PANEL=y
BR2_PACKAGE_NCURSES_TARGET_FORM=y
BR2_PACKAGE_NCURSES_TARGET_MENU=y

# Lightweight terminal tools
BR2_PACKAGE_TMUX=y
BR2_PACKAGE_SCREEN=y

# System info tools
BR2_PACKAGE_LSOF=y
BR2_PACKAGE_STRACE=y

# Network testing
BR2_PACKAGE_IPUTILS=y
BR2_PACKAGE_TCPDUMP=y
BR2_PACKAGE_NETCAT=y

# Compression for theme downloads
BR2_PACKAGE_TAR=y
BR2_PACKAGE_UNZIP=y
