# mythOS Chase Edition Configuration
# Minimal GUI edition - fits on anything (100-120MB target)
# Inherits from mythos-base.config

BR2_TARGET_GENERIC_HOSTNAME="mythos-chase"
BR2_TARGET_GENERIC_ISSUE="Welcome to mythOS Chase Edition"

# Filesystem size - minimal GUI with web browser
BR2_TARGET_ROOTFS_EXT2_SIZE="125M"

# X11 and GUI - Minimal
BR2_PACKAGE_XORG7=y
BR2_PACKAGE_XSERVER_XORG_SERVER=y
BR2_PACKAGE_XSERVER_XORG_SERVER_MODULAR=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_VESA=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_FBDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_EVDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_KEYBOARD=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_MOUSE=y

# Window Manager - Openbox (very lightweight)
BR2_PACKAGE_OPENBOX=y

# GTK3 for GUI apps
BR2_PACKAGE_LIBGTK3=y
BR2_PACKAGE_PANGO=y
BR2_PACKAGE_CAIRO=y

# Python for custom mythOS tools
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON_PYGOBJECT=y

# Web Browser - Firefox for Office365 access
BR2_PACKAGE_FIREFOX=y

# GUI File Manager
BR2_PACKAGE_PCMANFM=y

# Terminal Emulator
BR2_PACKAGE_XTERM=y
BR2_PACKAGE_LXTERMINAL=y

# Text Editor (GUI)
BR2_PACKAGE_GEANY=y
BR2_PACKAGE_NANO=y

# PDF Viewer
BR2_PACKAGE_MUPDF=y

# Image Viewer
BR2_PACKAGE_FEH=y

# Network Manager with GUI
BR2_PACKAGE_NETWORK_MANAGER=y
BR2_PACKAGE_NETWORK_MANAGER_GUI=y

# Bluetooth GUI
BR2_PACKAGE_BLUEZ_UTILS=y
BR2_PACKAGE_BLUEMAN=y

# Audio Support
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_PULSEAUDIO=y

# System Tray
BR2_PACKAGE_STALONETRAY=y

# Fonts
BR2_PACKAGE_DEJAVU=y
BR2_PACKAGE_LIBERATION=y

# Archive Manager
BR2_PACKAGE_FILE_ROLLER=y

# Compression
BR2_PACKAGE_TAR=y
BR2_PACKAGE_UNZIP=y
BR2_PACKAGE_ZIP=y
BR2_PACKAGE_GZIP=y
BR2_PACKAGE_BZIP2=y

# System info tools
BR2_PACKAGE_HTOP=y

# Network tools
BR2_PACKAGE_IPUTILS=y
BR2_PACKAGE_WGET=y
BR2_PACKAGE_CURL=y
BR2_PACKAGE_RSYNC=y
BR2_PACKAGE_OPENSSH=y

# VPN
BR2_PACKAGE_WIREGUARD_TOOLS=y
BR2_PACKAGE_OPENVPN=y
