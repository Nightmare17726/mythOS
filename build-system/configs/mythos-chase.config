# mythOS Chase Edition Configuration
# Terminal-only edition with office editing (100MB target)
# Inherits from mythos-base.config

BR2_TARGET_GENERIC_HOSTNAME="mythos-chase"
BR2_TARGET_GENERIC_ISSUE="Welcome to mythOS Chase Edition"

# Filesystem size - increased for office tools
BR2_TARGET_ROOTFS_EXT2_SIZE="105M"

# No X11/GUI for Chase
# BR2_PACKAGE_XORG7 is not set
# BR2_PACKAGE_XSERVER_XORG_SERVER is not set

# Terminal-only packages
BR2_PACKAGE_NCURSES=y
BR2_PACKAGE_NCURSES_WCHAR=y
BR2_PACKAGE_NCURSES_TARGET_PANEL=y
BR2_PACKAGE_NCURSES_TARGET_FORM=y
BR2_PACKAGE_NCURSES_TARGET_MENU=y

# Lightweight terminal tools
BR2_PACKAGE_TMUX=y
BR2_PACKAGE_SCREEN=y

# Text Editors
BR2_PACKAGE_VIM=y
BR2_PACKAGE_VIM_RUNTIME=y
BR2_PACKAGE_NANO=y

# File Managers
BR2_PACKAGE_MC=y

# Document Tools
BR2_PACKAGE_POPPLER=y
BR2_PACKAGE_PANDOC=y

# Text Browsers for Cloud Office Access
BR2_PACKAGE_LINKS=y
BR2_PACKAGE_LYNX=y

# Email Client
BR2_PACKAGE_MUTT=y

# Calendar and Tasks
BR2_PACKAGE_CALCURSE=y

# Version Control
BR2_PACKAGE_GIT=y
BR2_PACKAGE_GIT_FULL=y
BR2_PACKAGE_TIG=y

# Programming Languages
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_PIP=y
BR2_PACKAGE_NODEJS=y

# Development Tools
BR2_PACKAGE_GCC=y
BR2_PACKAGE_MAKE=y

# System info tools
BR2_PACKAGE_HTOP=y
BR2_PACKAGE_LSOF=y
BR2_PACKAGE_STRACE=y

# Network tools
BR2_PACKAGE_IPUTILS=y
BR2_PACKAGE_TCPDUMP=y
BR2_PACKAGE_NETCAT=y
BR2_PACKAGE_WGET=y
BR2_PACKAGE_CURL=y
BR2_PACKAGE_RSYNC=y
BR2_PACKAGE_OPENSSH=y
BR2_PACKAGE_MOSH=y

# VPN
BR2_PACKAGE_WIREGUARD_TOOLS=y
BR2_PACKAGE_OPENVPN=y

# File Transfer
BR2_PACKAGE_LFTP=y

# Compression for theme downloads
BR2_PACKAGE_TAR=y
BR2_PACKAGE_UNZIP=y
BR2_PACKAGE_ZIP=y
BR2_PACKAGE_GZIP=y
BR2_PACKAGE_BZIP2=y

# Additional Utilities
BR2_PACKAGE_FZF=y
BR2_PACKAGE_JQ=y
BR2_PACKAGE_NCDU=y
