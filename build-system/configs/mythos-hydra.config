# mythOS Hydra Edition Configuration
# Educational/Multi-disciplinary edition (150MB target)
# Inherits from mythos-base.config

BR2_TARGET_GENERIC_HOSTNAME="mythos-hydra"
BR2_TARGET_GENERIC_ISSUE="Welcome to mythOS Hydra Edition"

# Filesystem size
BR2_TARGET_ROOTFS_EXT2_SIZE="200M"

# X11 and GUI
BR2_PACKAGE_XORG7=y
BR2_PACKAGE_XSERVER_XORG_SERVER=y
BR2_PACKAGE_XSERVER_XORG_SERVER_MODULAR=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_VESA=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_FBDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_EVDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_KEYBOARD=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_MOUSE=y

# Window manager
BR2_PACKAGE_OPENBOX=y

# GTK3
BR2_PACKAGE_LIBGTK3=y
BR2_PACKAGE_PANGO=y
BR2_PACKAGE_CAIRO=y
BR2_PACKAGE_PYTHON_PYGOBJECT=y

# Education - Science/Math
BR2_PACKAGE_GNUPLOT=y
BR2_PACKAGE_OCTAVE=y
BR2_PACKAGE_MAXIMA=y

# Programming education
BR2_PACKAGE_PYTHON3_PIP=y
BR2_PACKAGE_GCC=y
BR2_PACKAGE_GDB=y
BR2_PACKAGE_MAKE=y
BR2_PACKAGE_CMAKE=y

# Editors
BR2_PACKAGE_VIM=y
BR2_PACKAGE_EMACS=y

# Git for version control education
BR2_PACKAGE_GIT=y

# Networking tools (for network education)
BR2_PACKAGE_NMAP=y
BR2_PACKAGE_WIRESHARK=y
BR2_PACKAGE_TCPDUMP=y

# Virtualization (if supported)
BR2_PACKAGE_QEMU=y
BR2_PACKAGE_QEMU_SYSTEM=y

# Image/Video tools
BR2_PACKAGE_GIMP=y
BR2_PACKAGE_IMAGEMAGICK=y
BR2_PACKAGE_FFMPEG=y

# Audio tools
BR2_PACKAGE_AUDACITY=y
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_PULSEAUDIO=y

# 3D modeling
BR2_PACKAGE_BLENDER=y

# File manager
BR2_PACKAGE_PCMANFM=y

# Terminal
BR2_PACKAGE_XTERM=y

# Web browser
BR2_PACKAGE_FIREFOX=y
BR2_PACKAGE_CHROMIUM=y

# Office suite
BR2_PACKAGE_ABIWORD=y

# PDF reader
BR2_PACKAGE_MUPDF=y

# Fonts
BR2_PACKAGE_DEJAVU=y
BR2_PACKAGE_LIBERATION=y

# AI Hub tools (via Python)
BR2_PACKAGE_PYTHON3_REQUESTS=y
BR2_PACKAGE_PYTHON3_BEAUTIFULSOUP4=y
