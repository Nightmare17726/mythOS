# mythOS Pegasus Edition Configuration
# Giant UI, voice control, accessibility for elderly (150MB target)
# Inherits from mythos-base.config

BR2_TARGET_GENERIC_HOSTNAME="mythos-pegasus"
BR2_TARGET_GENERIC_ISSUE="Welcome to mythOS Pegasus Edition"

# Filesystem size - increased for complete suite
BR2_TARGET_ROOTFS_EXT2_SIZE="160M"

# X11 and GUI
BR2_PACKAGE_XORG7=y
BR2_PACKAGE_XSERVER_XORG_SERVER=y
BR2_PACKAGE_XSERVER_XORG_SERVER_MODULAR=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_VESA=y
BR2_PACKAGE_XDRIVER_XF86_VIDEO_FBDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_EVDEV=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_KEYBOARD=y
BR2_PACKAGE_XDRIVER_XF86_INPUT_MOUSE=y

# Desktop Environment - XFCE4 (for better UI control)
BR2_PACKAGE_XFCE4=y
BR2_PACKAGE_XFCE4_PANEL=y
BR2_PACKAGE_XFCE4_SETTINGS=y
BR2_PACKAGE_XFCE4_SESSION=y

# GTK3 for GUI apps
BR2_PACKAGE_LIBGTK3=y
BR2_PACKAGE_PANGO=y
BR2_PACKAGE_CAIRO=y

# Python GTK bindings for custom apps
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON_PYGOBJECT=y
BR2_PACKAGE_PYTHON3_PIP=y

# Large fonts and accessibility
BR2_PACKAGE_DEJAVU=y
BR2_PACKAGE_LIBERATION=y
BR2_PACKAGE_FONT_AWESOME=y

# Voice Control & TTS
BR2_PACKAGE_ESPEAK=y
BR2_PACKAGE_FESTIVAL=y

# File Manager
BR2_PACKAGE_PCMANFM=y
BR2_PACKAGE_THUNAR=y

# Terminal emulator (large font capable)
BR2_PACKAGE_XTERM=y
BR2_PACKAGE_XFCE4_TERMINAL=y

# Communication
BR2_PACKAGE_THUNDERBIRD=y
BR2_PACKAGE_FIREFOX=y

# Office Suite
BR2_PACKAGE_LIBREOFFICE=y
BR2_PACKAGE_LIBREOFFICE_WRITER=y
BR2_PACKAGE_LIBREOFFICE_CALC=y
BR2_PACKAGE_LIBREOFFICE_IMPRESS=y

# PDF Reader
BR2_PACKAGE_EVINCE=y
BR2_PACKAGE_POPPLER=y

# Media Players
BR2_PACKAGE_VLC=y

# Image Viewer & Photo Management
BR2_PACKAGE_SHOTWELL=y
BR2_PACKAGE_EOG=y
BR2_PACKAGE_GIMP=y

# Webcam
BR2_PACKAGE_CHEESE=y

# Scanner
BR2_PACKAGE_SIMPLE_SCAN=y

# Games for Cognitive Health
BR2_PACKAGE_GNOME_MAHJONGG=y
BR2_PACKAGE_AISLERIOT=y

# Calculator
BR2_PACKAGE_GNOME_CALCULATOR=y

# Weather
BR2_PACKAGE_GNOME_WEATHER=y

# Clocks
BR2_PACKAGE_GNOME_CLOCKS=y

# E-book Reader
BR2_PACKAGE_FBREADER=y
BR2_PACKAGE_CALIBRE=y

# Accessibility - screen magnifier & reader
BR2_PACKAGE_XZOOM=y
BR2_PACKAGE_ORCA=y

# On-screen keyboard
BR2_PACKAGE_ONBOARD=y

# Remote Assistance
BR2_PACKAGE_X11VNC=y
BR2_PACKAGE_TIGERVNC=y

# Sound support
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_ALSA_UTILS_SPEAKER_TEST=y
BR2_PACKAGE_PULSEAUDIO=y
BR2_PACKAGE_PAVUCONTROL=y

# Network Manager GUI
BR2_PACKAGE_NETWORK_MANAGER=y
BR2_PACKAGE_NETWORK_MANAGER_GUI=y

# Printer Support
BR2_PACKAGE_CUPS=y
BR2_PACKAGE_SYSTEM_CONFIG_PRINTER=y
